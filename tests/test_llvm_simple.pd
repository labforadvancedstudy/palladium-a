// Simple test for LLVM backend improvements

fn test_add() -> i64 {
    let x = 10;
    let y = 20;
    return x + y;
}

fn test_while() -> i64 {
    let mut sum = 0;
    let mut i = 1;
    
    while i <= 5 {
        sum = sum + i;
        i = i + 1;
    }
    
    return sum; // Should be 15
}

fn test_for() -> i64 {
    let mut sum = 0;
    
    for i in 1..6 {
        sum = sum + i;
    }
    
    return sum; // Should be 15
}

fn main() -> i64 {
    let a = test_add();
    let b = test_while();
    let c = test_for();
    
    print_int(a);  // 30
    print_int(b);  // 15
    print_int(c);  // 15
    
    return 0;
}