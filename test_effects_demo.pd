fn pure_math(x: i32, y: i32) -> i32 {
    let sum = x + y;
    let product = x * y;
    sum + product
}

fn file_reader() -> String {
    let handle = file_open("test.txt");
    let content = file_read_all(handle);
    file_close(handle);
    content
}

async fn async_compute() -> i32 {
    let value = 42;
    value * 2
}

fn main() {
    let math_result = pure_math(3, 4);
    print("Math result: ");
    print_int(math_result);
    
    if file_exists("test.txt") {
        let content = file_reader();
        print("File content: ");
        print(content);
        print("\n");
    }
    
    let future = async_compute();
    
    print("Effects demo complete\n");
}