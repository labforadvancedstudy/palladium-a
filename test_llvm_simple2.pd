// Simple LLVM test without arrays

fn add(a: i64, b: i64) -> i64 {
    return a + b;
}

fn factorial(n: i64) -> i64 {
    if n <= 1 {
        return 1;
    }
    return n * factorial(n - 1);
}

fn main() -> i64 {
    let x = add(10, 20);
    print_int(x);  // Should print 30
    
    let fact5 = factorial(5);
    print_int(fact5);  // Should print 120
    
    return 0;
}