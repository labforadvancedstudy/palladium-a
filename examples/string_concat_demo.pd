// Demonstrating string concatenation in Palladium

fn greet(name: String) -> String {
    return "Hello, " + name + "! Welcome to Palladium.";
}

fn create_full_name(first: String, last: String) -> String {
    return first + " " + last;
}

fn main() {
    // Basic concatenation
    let hello = "Hello";
    let world = "World";
    let greeting = hello + ", " + world + "!";
    print(greeting);
    
    // Function calls with concatenation
    let message = greet("Alice");
    print(message);
    
    // Multiple concatenations
    let full_name = create_full_name("Alan", "Turing");
    let introduction = "I am " + full_name + ", the legendary computer scientist.";
    print(introduction);
    
    // Building complex strings
    let lang = "Palladium";
    let version = "v1.0";
    let description = lang + " " + version + " - " + "The Future of Systems Programming";
    print(description);
}