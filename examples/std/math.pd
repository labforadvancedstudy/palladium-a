// Standard math module for Palladium

pub fn pd_abs(x: i64) -> i64 {
    if x < 0 {
        return -x;
    }
    return x;
}

pub fn max(a: i64, b: i64) -> i64 {
    if a > b {
        return a;
    }
    return b;
}

pub fn min(a: i64, b: i64) -> i64 {
    if a < b {
        return a;
    }
    return b;
}

pub fn pd_pow(base: i64, exp: i64) -> i64 {
    let mut result = 1;
    let mut i = 0;
    while i < exp {
        result = result * base;
        i = i + 1;
    }
    return result;
}