// Basic array operations in Palladium v0.3
fn main() {
    // Array declaration with explicit type
    let numbers: [i32; 5] = [10, 20, 30, 40, 50];
    
    // Access array elements
    print_int(numbers[0]);
    print_int(numbers[2]);
    print_int(numbers[4]);
    
    // Array with inferred type
    let values = [1, 2, 3, 4, 5];
    
    // Use array elements in expressions
    let sum = values[0] + values[1] + values[2];
    print_int(sum);
    
    // Boolean array
    let flags = [true, false, true];
    if flags[0] {
        print("First flag is true");
    }
    
    if flags[1] {
        print("Second flag is true");
    } else {
        print("Second flag is false");
    }
}