// Test the new I/O functionality
fn main() {
    // Test path operations
    if path_exists("test.txt") {
        print("test.txt exists");
    } else {
        print("test.txt does not exist");
    }
    
    // Write a file
    let content = "Hello from Palladium I/O!\nThis is a test.";
    write_string_to_file("test.txt", content);
    print("File written");
    
    // Check if it's a file
    if path_is_file("test.txt") {
        print("test.txt is a file");
    }
    
    // Read it back
    let read_content = read_file_to_string("test.txt");
    print("File contents:");
    print(read_content);
    
    // Create a directory
    create_dir("test_dir");
    print("Directory created");
    
    // Check if it's a directory
    if path_is_dir("test_dir") {
        print("test_dir is a directory");
    }
    
    // Clean up
    remove_file("test.txt");
    remove_dir("test_dir");
    print("Cleanup complete");
}