// Test function return values
fn factorial(n: i32) -> i32 {
    if n <= 1 {
        return 1;
    }
    return n * factorial(n - 1);
}

fn max(a: i32, b: i32) -> i32 {
    if a > b {
        return a;
    } else {
        return b;
    }
}

fn is_even(n: i32) -> bool {
    return n % 2 == 0;
}

fn main() {
    // Test factorial
    let fact5 = factorial(5);
    print("5! = ");
    print_int(fact5);
    
    // Test max
    let larger = max(17, 23);
    print("max(17, 23) = ");
    print_int(larger);
    
    // Test boolean return
    if is_even(10) {
        print("10 is even");
    }
    
    if is_even(7) == false {
        print("7 is odd");
    }
}