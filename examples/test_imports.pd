// Demonstrate Palladium's module system

import std::math;
import std::string;

fn process_name(name: String) -> String {
    let trimmed = trim(name);
    let greeting = "Hello, " + trimmed + "!";
    return greeting;
}

fn calculate_area(radius: i64) -> i64 {
    // π ≈ 22/7 for integer math
    let pi_numerator = 22;
    let pi_denominator = 7;
    let r_squared = pd_pow(radius, 2);
    return (pi_numerator * r_squared) / pi_denominator;
}

fn main() {
    // Test string processing
    let name = "  Alice  ";
    let message = process_name(name);
    print(message);
    
    // Test math calculations
    let radius = 5;
    let area = calculate_area(radius);
    print("Circle area calculation:");
    print("Radius: " + int_to_string(radius));
    print("Area ≈ " + int_to_string(area));
    
    // Test string predicates
    let filename = "test.pd";
    if ends_with(filename, ".pd") {
        print("This is a Palladium source file!");
    }
}